<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plot.ariwasch.adopt_a_plot">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.plot.ariwasch.adopt_a_plot.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.plot.ariwasch.adopt_a_plot.MorePlots" />
        <activity android:name="com.plot.ariwasch.adopt_a_plot.CreatePlot" />
        <activity android:name="com.plot.ariwasch.adopt_a_plot.FullScreenPlot" />
        <activity android:name="com.plot.ariwasch.adopt_a_plot.SelectPlots" />
        <activity android:name="com.plot.ariwasch.adopt_a_plot.Slider"></activity>
    </application>

</manifest>