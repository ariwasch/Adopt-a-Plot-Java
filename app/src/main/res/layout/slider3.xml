<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/linearLayout"
    android:layout_height="match_parent"
    android:background="#D9E3E4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#7EA8AC"
        android:gravity="center"
        android:text="WHAT NOT TO DO"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:lines="40"
        android:maxLines="100"
        android:text="  1.	DO NOT DISTURB THE SOIL"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Do not pull up any vines from the ground. This is considered disturbing soil and is not permitted under the AAP Program."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Do not disturb anything lying on the ground: dead or fallen tree trunks, branches, etc. These are also habitats, not firewood."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	The forest does not need to be cleaned up. If something is in your way, step over it or walk around it. "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •   Work gloves"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:lines="40"
        android:maxLines="100"
        android:text="  2.	DO NOT REMOVE UNTARGETED VINES"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Do not remove Grape Vine. "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Do not remove Poison Ivy. It is a noxious vine that grows on trees and along the ground throughout our woods. It causes a rash and itching. Do not touch it!! It can be spotted in winter by its thick “furry” vines. See Field Guide to help identify."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Do not remove vines on “snags” - dead trees still standing. These are actually providing habitat."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:lines="40"
        android:maxLines="100"
        android:text="  3.	DO NOT ENTER ENCLOSURES, IF ONE IS ON YOUR  PLOT"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:lines="40"
        android:maxLines="100"
        android:text="  4.	DO NOT BRING:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Dogs"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Rakes"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Chainsaws or Weed whackers"
        android:textColor="#000000" />

</LinearLayout>