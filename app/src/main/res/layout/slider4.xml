<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/linearLayout"
    android:layout_height="match_parent"
    android:background="#D9E3E4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#7EA8AC"
        android:gravity="center"
        android:text="INFORMATION TO SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:lines="40"
        android:maxLines="100"
        android:text="1.	REPORT BACK TO ADOPT A PLOT"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        Each time you work in the woods, at least a few hours per year, report back to Adopt A Plot on your progress. For example:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Describe what you did and where and how much time spent (# workers x # minutes)."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Any challenges with cutting -- too thick, too difficult to cut for any reason, too many vines, etc."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	What’s working? Any tips to pass on to fellow Warriors."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Anything out of the ordinary or area of concern, for example: a lot of trash, evidence of soil or plant disturbance from games, bicycles, hunting, fishing, cutting or removal of vegetation other than what you did, or damaged screening on enclosures"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Any questions for our experts "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Smart phone photos are good for any aspect of your report. If there is a specific tree or area that you are unable to handle, a photo is a great resource for our team to locate your area of concern."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:lines="40"
        android:maxLines="100"
        android:text="2.	HOW TO SUBMIT"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:lines="40"
        android:autoLink="all"
        android:clickable="true"
        android:maxLines="100"
        android:text="        •	At a minimum, please send a simple email to adoptaplot@bayridge.org telling stating what plot you worked and an estimate of how many person-hours it took "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:lines="40"
        android:autoLink="all"
        android:clickable="true"
        android:maxLines="100"
        android:text="        •	Preferably, go to the Reporting Form on the Bay Ridge website at: bay-ridge.org/adopter-reporting "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="355dp"
        android:layout_height="41dp"
        android:lines="40"
        android:maxLines="100"
        android:text="        •	Simply fill out the fields within the document and you’re done! "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:autoLink="all"
        android:clickable="true"
        android:lines="40"
        android:maxLines="100"
        android:text="For additional information, please visit: http://bay-ridge.org/community-land/adoptaplot/"
        android:textColor="#000000" />

</LinearLayout>